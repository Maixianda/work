<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="header"
            type="com.gzliangce.ui.model.HeaderModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f4"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="房款总价:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <EditText
                    android:id="@+id/et_house_total_price"
                    android:layout_width="@dimen/dp_103"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_gray_edit"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="100"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:text="万元"
                    android:textColor="@color/black_0a" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:id="@+id/fly_down_payment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ripple_default_white"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="首付比例:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_down_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center"
                    android:text="3成(30万元)"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="贷款总额:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <EditText
                    android:id="@+id/et_total_loan"
                    android:layout_width="@dimen/dp_103"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_gray_edit"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="70"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:text="万元"
                    android:textColor="@color/black_0a" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:id="@+id/fly_mortgage_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ripple_default_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="按揭年数:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_mortgage_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center"
                    android:text="20年(240期)"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:id="@+id/fly_interest_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_default_white"
                android:minHeight="@dimen/dp_52">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="利率:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_interest_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_65"
                    android:text="15年10月24日基准利率(4.75%)"
                    android:textColor="@color/black_0a" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <TextView
                android:id="@+id/tv_calculate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@drawable/ripple_default_btn_round_gray"
                android:enabled="false"
                android:gravity="center"
                android:text="开始计算"
                android:textColor="@color/color_white_gray_selector"
                android:textSize="@dimen/font_15" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
