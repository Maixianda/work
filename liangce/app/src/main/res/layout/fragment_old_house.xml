<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="header"
            type="com.gzliangce.ui.model.HeaderModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="房屋面积:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/et_house_area"
                    android:layout_width="@dimen/dp_103"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_gray_edit"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="100"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:text="平米"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_13" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="房屋单价:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <EditText
                    android:id="@+id/et_house_fee"
                    android:layout_width="@dimen/dp_103"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_gray_edit"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="10000"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:text="元"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_13" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />


            <FrameLayout
                android:id="@+id/fly_house_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ripple_default_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="房屋属性:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_house_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center"
                    android:text="普通住宅"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <FrameLayout
                android:id="@+id/fly_house_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ripple_default_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="房产证年限:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_house_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/ic_arrow"
                    android:gravity="center"
                    android:text="不满2年"
                    android:textColor="@color/red_fa4"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <include layout="@layout/view_line_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="计征方式:"
                    android:textColor="@color/black_0a"
                    android:textSize="@dimen/font_15" />

                <RadioGroup
                    android:id="@+id/rg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_bg_radio_btn"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="总价"
                        android:textColor="@color/black_1b"
                        android:textSize="@dimen/font_15" />

                    <RadioButton
                        android:id="@+id/rb_difference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_bg_radio_btn"
                        android:drawablePadding="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_19"
                        android:text="差价"
                        android:textColor="@color/black_1b"
                        android:textSize="@dimen/font_15" />
                </RadioGroup>
            </LinearLayout>

            <include layout="@layout/view_line_vertical" />

            <LinearLayout
                android:id="@+id/lly_housing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="房屋原价:"
                        android:textColor="@color/black_0a"
                        android:textSize="@dimen/font_15" />

                    <EditText
                        android:id="@+id/et_original_Price"
                        android:layout_width="@dimen/dp_103"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_bg_gray_edit"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="50"
                        android:textColor="@color/red_fa4"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/dp_12"
                        android:gravity="center"
                        android:text="万元"
                        android:textColor="@color/black_0a"
                        android:textSize="@dimen/font_13" />

                </FrameLayout>

                <include layout="@layout/view_line_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_9"
                android:paddingTop="@dimen/dp_9">

                <CheckBox
                    android:id="@+id/ck_is_frist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:drawableLeft="@drawable/selector_ck_bg"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:text="买方首次购买"
                    android:textColor="@color/gray_95"
                    android:textSize="@dimen/font_12" />

                <CheckBox
                    android:id="@+id/ck_is_only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:drawableLeft="@drawable/selector_ck_bg"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:text="卖方唯一住房"
                    android:textColor="@color/gray_95"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <include layout="@layout/view_line_vertical" />


            <TextView
                android:id="@+id/tv_calulator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:layout_marginBottom="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_42"
                android:background="@drawable/ripple_default_btn_round_gray"
                android:enabled="false"
                android:gravity="center"
                android:text="开始计算"
                android:textColor="@color/color_white_gray_selector"
                android:textSize="@dimen/font_15" />
        </LinearLayout>

    </ScrollView>

</layout>