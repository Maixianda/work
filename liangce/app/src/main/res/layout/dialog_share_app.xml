<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_36"
            android:paddingTop="@dimen/dp_18"
            android:text="分享到"
            android:textColor="@color/black_1b"
            android:textSize="@dimen/font_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">
            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_default_white"
                android:drawablePadding="@dimen/dp_15"
                android:drawableTop="@drawable/ic_wechat"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/gray_95"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tv_wechat_moments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_default_white"
                android:drawablePadding="@dimen/dp_15"
                android:drawableTop="@drawable/ic_wechat_moments"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textColor="@color/gray_95"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tv_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_default_white"
                android:drawablePadding="@dimen/dp_15"
                android:drawableTop="@drawable/ic_sina"
                android:gravity="center"
                android:text="新浪微博"
                android:textColor="@color/gray_95"
                android:textSize="@dimen/font_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_qq_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_default_white"
                android:drawablePadding="@dimen/dp_15"
                android:drawableTop="@drawable/ic_qq_friend"
                android:gravity="center"
                android:text="QQ好友"
                android:textColor="@color/gray_95"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tv_qq_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_default_white"
                android:drawablePadding="@dimen/dp_15"
                android:drawableTop="@drawable/ic_qq_zone"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/gray_95"
                android:textSize="@dimen/font_11" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/dp_38"
            android:background="@color/gray_95" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ripple_default_white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="取消"
            android:textColor="@color/black_0a"
            android:textSize="@dimen/font_19" />
    </LinearLayout>

</layout>