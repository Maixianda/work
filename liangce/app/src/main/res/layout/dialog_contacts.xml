<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.gzliangce.entity.OrderInfo" />

        <import type="com.gzliangce.util.XmlUtil" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:text="@{XmlUtil.displayContactsTitle()}"
            android:textColor="@color/gray_95"
            android:textSize="@dimen/font_14" />

        <include layout="@layout/view_line_vertical" />

        <TextView
            android:id="@+id/tv_dial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:background="@drawable/ripple_default_white"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/blue_33"
            android:textSize="@dimen/font_19" />

        <include layout="@layout/view_line_vertical" />

        <TextView
            android:id="@+id/tv_send_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:background="@drawable/ripple_default_white"
            android:clickable="true"
            android:gravity="center"
            android:text="与我聊天"
            android:textColor="@color/blue_33"
            android:textSize="@dimen/font_19" />

        <include layout="@layout/view_line_vertical" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ripple_default_white"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/red_fa4"
            android:textSize="@dimen/font_19" />

    </LinearLayout>

</layout>