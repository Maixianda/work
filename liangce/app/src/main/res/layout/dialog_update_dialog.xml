<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dp_290"
            android:layout_height="@dimen/dp_355"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_337"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_btn_bg_white"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@null"
                    android:src="@drawable/ic_update_hint" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center"
                    android:text="您已经升级到....."
                    android:textColor="@color/gray_37"
                    android:textSize="@dimen/font_16" />

                <include layout="@layout/view_line_vertical" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_10"
                            android:text="更新内容"
                            android:textColor="@color/gray_89"
                            android:textSize="@dimen/font_13" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibtn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:src="@drawable/ic_close_dailog" />
        </FrameLayout>
    </LinearLayout>
</layout>